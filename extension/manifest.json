{
  "manifest_version": 3,
  "name": "FocusSentinel",
  "version": "1.0.0",
  "description": "Enforce strict study focus by blocking non-whitelisted sites via Native Messaging.",
  "permissions": [
    "nativeMessaging",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusSentinel Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
